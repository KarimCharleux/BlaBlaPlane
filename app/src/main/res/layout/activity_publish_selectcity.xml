<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.PublishSelectCityActivity"
    android:id="@+id/publish_fragment">

    <androidx.fragment.app.FragmentContainerView
        android:name="com.example.blablaplane.fragments.HeaderFragment"
        android:id="@+id/header_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout="@layout/fragment_header"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/frag_publish_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/header_fragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="Depart"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="45dp"

        android:background="@drawable/rounded_bottom_background"
        android:backgroundTint="@color/grey"
        />


    <TextView
        android:id="@+id/frag_publish_txt_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_publish_title"

        android:text= "@string/RESEARCH_selectionDepart"
        android:textSize="25dp"
        />

    <fragment android:id="@+id/autocomplete_fragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_publish_txt_select"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        />

    <Button
        android:id="@+id/btn_confirm_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/autocomplete_fragment"
        android:layout_marginTop="25dp"

        android:backgroundTint="@color/blue"

        android:hint="Valider"
        />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/footer_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout="@layout/fragment_footer"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>