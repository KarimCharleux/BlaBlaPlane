<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentMyTrips">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30sp"
        android:text="@string/myTrips"
        android:textAlignment="center"
        android:textColor="@color/blue_fancy"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listTripView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90sp"
        android:clickable="false"
        android:paddingBottom="50sp" />

    <LinearLayout
        android:id="@+id/noMyTripMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noMyTripMessage"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/blue_primary"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/returnHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/blue_primary"
                android:outlineSpotShadowColor="@color/blue_primary"
                android:text="@string/bookTrips"
                android:textAllCaps="false"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="503dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>