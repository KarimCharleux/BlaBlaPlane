<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InscriptionActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/header"
        android:name="com.example.blablaplane.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_header" />

    <LinearLayout
        android:id="@+id/connexion_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/connexion_inscription_header"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:text="Destination"
            android:style="@style/text_color_sub_category"/>
    </LinearLayout>

    <TextView
        android:id="@+id/connexion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connexion_header"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="SÃ©lectionnez votre destination"
        android:textSize="25dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connexion_title"
        android:layout_marginRight="50dp"/>

    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:ems="14"
        android:hint="Destination"
        android:inputType="textDestinationName"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textCursorDrawable="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connexion_title" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#39C3FD"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintVertical_bias="0.22000003">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#39C3FD"
            android:outlineSpotShadowColor="#00BCD4"
            android:layout_gravity="center"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="5dp"
            android:text="Confirmer"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>













</androidx.constraintlayout.widget.ConstraintLayout>