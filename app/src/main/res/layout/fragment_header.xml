    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <androidx.cardview.widget.CardView
