<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/header"
        android:name="com.example.blablaplane.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_header"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/picture_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/profile1"/>

        <TextView
            android:id="@+id/first_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pierre"
            app:layout_constraintStart_toEndOf="@id/picture_profile"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DUBOIS"
            app:layout_constraintStart_toEndOf="@id/first_name"
            app:layout_constraintTop_toTopOf="@id/first_name"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/person_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilote Expert"
            app:layout_constraintStart_toStartOf="@id/first_name"
            app:layout_constraintTop_toBottomOf="@id/first_name"
            android:textSize="25dp"
            android:textColor="#a3a3a3"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/person_title"
            app:layout_constraintStart_toStartOf="@id/first_name"
            android:numStars="5"
            android:rating="4"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/customRatingBar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_informations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_summary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/checkbox_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            android:src="@drawable/checked_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toEndOf="@id/checkbox_1"
            app:layout_constraintTop_toTopOf="@id/checkbox_1"
            android:text="pierre.dubois@gmail.com"
            android:textColor="@color/black"
            android:textSize="22dp"/>

        <ImageView
            android:id="@+id/checkbox_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            android:src="@drawable/checked_box"
            app:layout_constraintStart_toStartOf="@id/checkbox_1"
            app:layout_constraintTop_toBottomOf="@id/checkbox_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toEndOf="@id/checkbox_2"
            app:layout_constraintTop_toTopOf="@id/checkbox_2"
            android:text="06 01 02 03 04"
            android:textColor="@color/black"
            android:textSize="22dp"/>

        <ImageView
            android:id="@+id/checkbox_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            android:src="@drawable/checked_box"
            app:layout_constraintStart_toStartOf="@id/checkbox_1"
            app:layout_constraintTop_toBottomOf="@id/checkbox_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toEndOf="@id/checkbox_3"
            app:layout_constraintTop_toTopOf="@id/checkbox_3"
            android:text="Pièce d’identité"
            android:textColor="@color/black"
            android:textSize="22dp"/>

        <ImageView
            android:id="@+id/checkbox_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            android:src="@drawable/checked_box"
            app:layout_constraintStart_toStartOf="@id/checkbox_1"
            app:layout_constraintTop_toBottomOf="@id/checkbox_3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toEndOf="@id/checkbox_4"
            app:layout_constraintTop_toTopOf="@id/checkbox_4"
            android:text="Brevet de pilote PPL"
            android:textColor="@color/black"
            android:textSize="22dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bookButtonLayout"
        android:layout_width="229dp"
        android:layout_height="55dp"
        android:backgroundTint="#39C3FD"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_informations"
        app:layout_constraintVertical_bias="0.22000003">

        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#39C3FD"
            android:outlineSpotShadowColor="#00BCD4"
            android:text="Modifier"
            android:textAllCaps="false"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="503dp" />
    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/aeronef_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/bookButtonLayout"
        android:divider="@null"
        android:clickable="false">



    </ListView>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/footer"
        android:name="com.example.blablaplane.FooterFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/fragment_footer" />

</androidx.constraintlayout.widget.ConstraintLayout>