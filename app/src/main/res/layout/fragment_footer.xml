<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentFooter"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/footer_background_1"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="7dp"
    tools:context="com.example.blablaplane.FooterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/footer_background_2"
        android:baselineAligned="false"
        android:gravity="center">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/buttonSearching"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/buttonsearching"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_magnifying_glass" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/buttonAdding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                android:contentDescription="@string/buttonAdding"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/buttonDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/buttondefault"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/buttonChatting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/buttonChatting"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_conversation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/buttonProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/buttonProfile"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_avatar" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>